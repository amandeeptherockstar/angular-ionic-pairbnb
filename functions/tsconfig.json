{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "noImplicitAny": false,
    // for allowing json access files into typescript
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
